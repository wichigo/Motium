<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Location permissions -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION" />

    <!-- Foreground service permission -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_DATA_SYNC" />

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Camera permission for receipt photos -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />

    <!-- Wake lock for GPS tracking -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Write external storage for caching maps -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Post notifications for foreground service -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Auto start permission -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!-- Activity Recognition permission -->
    <uses-permission android:name="com.google.android.gms.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- CRITICAL: Battery optimization exemption to prevent Doze mode from killing services -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" />
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <application
        android:name=".MotiumApplication"
        android:allowBackup="false"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Motium">

        <!-- Main Activity -->
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Motium">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- Deep Links for Company Link Invitations (HTTPS) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="motium.org"
                    android:pathPrefix="/link" />
            </intent-filter>

            <!-- Custom Scheme for App Links (fallback) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="motium"
                    android:host="link" />
            </intent-filter>

            <!-- Deep Links for Password Reset (HTTPS) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="motium.org"
                    android:pathPrefix="/reset" />
            </intent-filter>

            <!-- Custom Scheme for Password Reset (fallback) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="motium"
                    android:host="reset" />
            </intent-filter>

            <!-- Deep Links for Email Verification (HTTPS) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="motium.org"
                    android:pathPrefix="/verify" />
            </intent-filter>

            <!-- Custom Scheme for Email Verification (fallback) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="motium"
                    android:host="verify" />
            </intent-filter>

            <!-- Deep Links for Unlink Confirmation (HTTPS) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="motium.org"
                    android:pathPrefix="/unlink" />
            </intent-filter>

            <!-- Custom Scheme for Unlink Confirmation (fallback) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="motium"
                    android:host="unlink" />
            </intent-filter>
        </activity>

        <!-- Activity Recognition Service -->
        <!-- exported="true" for DEBUG transitions via ADB (test only) -->
        <service
            android:name=".service.ActivityRecognitionService"
            android:foregroundServiceType="location"
            android:exported="true">
            <!-- Intent filter for debug transitions (testing via ADB) -->
            <intent-filter>
                <action android:name="com.application.motium.ACTION_DEBUG_TRANSITION" />
            </intent-filter>
        </service>

        <!-- Location Tracking Service -->
        <!-- exported="true" for DEBUG GPS injection via ADB (test only) -->
        <service
            android:name=".service.LocationTrackingService"
            android:foregroundServiceType="location"
            android:exported="true">
            <!-- Intent filter for debug GPS injection (testing via ADB) -->
            <intent-filter>
                <action android:name="com.application.motium.ACTION_DEBUG_LOCATION" />
            </intent-filter>
        </service>


        <!-- Supabase Connection Service -->
        <service
            android:name=".service.SupabaseConnectionService"
            android:foregroundServiceType="dataSync"
            android:exported="false"
            android:enabled="true" />

        <!-- FileProvider for sharing logs -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <!-- NOTE: ActivityRecognitionReceiver REMOVED (2026-01)
             Samsung One UI kills BroadcastReceivers even with battery exemption.
             Transitions are now handled via PendingIntent.getForegroundService()
             directly in ActivityRecognitionService.onStartCommand() -->

        <!-- Auto start receiver - BOOT_COMPLETED needs separate intent-filter -->
        <receiver
            android:name=".service.AutoStartReceiver"
            android:enabled="true"
            android:exported="true"
            android:directBootAware="true">
            <!-- Boot completed - NO data scheme (critical!) -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
            <!-- App update - needs package scheme -->
            <intent-filter android:priority="1000">
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>

        <!-- NOTE: ActivityRecognitionKeepAliveReceiver REMOVED (2026-01)
             Keep-alive now uses PendingIntent.getForegroundService() via DozeModeFix
             to directly wake ActivityRecognitionService (Samsung-compatible) -->

    </application>

</manifest>